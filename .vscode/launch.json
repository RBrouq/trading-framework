{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Debug Framework",
      "type": "debugpy",
      "request": "launch",
      "module": "trading_framework",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env",
      "args": []
    }
  ]
}