{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Init Environment",
      "type": "shell",
      "command": "python -m venv .venv; .\\.venv\\Scripts\\Activate.ps1; pip install -r requirements-lock.txt; pip install -e .[dev]",
      "problemMatcher": []
    },
    {
      "label": "Lint & Format (Ruff)",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\Activate.ps1; ruff format . && ruff check .",
      "problemMatcher": []
    },
    {
      "label": "Type-check (MyPy)",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\Activate.ps1; python -m mypy src --strict",
      "problemMatcher": []
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\Activate.ps1; pytest --cov=src --maxfail=1 -q",
      "group": { "kind": "test", "isDefault": true },
      "presentation": { "reveal": "always" },
      "problemMatcher": []
    },
    {
      "label": "CI (local)",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\Activate.ps1; ruff format . && ruff check . && python -m mypy src --strict && pytest --cov=src",
      "presentation": { "reveal": "always" },
      "problemMatcher": []
    }
  ]
}
